<% content_for :section_title, "Forms" %>

<div class="mb-20">
  <h2 class="pb-3 mb-6 border-b border-gray-300">Block</h2>

    <%= render "jumpstart/docs/snippet" do %>
<form action="#">

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control" placeholder="Johnny Knoxville">
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" name="email" class="form-control">
  </div>

  <div class="form-group">
    <label for="website">Website</label>
    <input type="url" name="website" class="form-control error" value="My Website">
    <p class="form-hint error">Please enter a valid URL</p>
  </div>

  <div class="form-group">
    <span class="label">Avatar</span>
    <input type="file" name="avatar" class="form-control form-file" data-multiple-caption="{count} files selected" multiple>
    <label for="avatar">
      <%= render_svg "icons/photo", styles: "fill-current icon-sm mr-2" %> <span>Upload Avatar</span>
    </label>
  </div>

  <div class="form-group">
    <label for="industry">Industry</label>
    <div class="relative">
      <select name="industry" class="select">
        <option value="" selected>Choose an industry</option>
        <option value="tech">Tech</option>
        <option value="marketing">Marketing</option>
        <option value="health_science">Health &amp; Science</option>
      </select>
      <div class="caret">
        <%= render_svg "icons/caret", styles: "fill-current h-4 w-4" %>
      </div>
    </div>
  </div>

</form>
    <% end %>

<div class="mb-20">
  <h2 class="pb-3 mb-6 border-b border-gray-300">Inline</h2>

    <%= render "jumpstart/docs/snippet" do %>
<form action="#">
  <div class="form-group flex flex-wrap items-center justify-start">
    <label for="name" class="lg:w-1/6 lg:text-right lg:pr-4 lg:mt-2">Name</label>
    <input type="text" name="name" class="form-control lg:flex-1">
  </div>

  <div class="form-group flex flex-wrap items-center justify-start">
    <label for="email" class="lg:w-1/6 lg:text-right lg:pr-4 lg:mt-2">Email</label>
    <input type="email" name="email" class="form-control lg:flex-1">
  </div>

  <div class="form-group flex flex-wrap items-center justify-start">
    <label for="website" class="lg:w-1/6 lg:text-right lg:pr-4 lg:-mt-4">Website</label>
    <div class="lg:flex-1 w-full">
      <input type="url" name="website" class="form-control error" value="My Website">
      <p class="form-hint w-full error">Please enter a valid URL</p>
    </div>
  </div>

  <div class="form-group flex flex-wrap items-center justify-start">
    <span class="label lg:w-1/6 lg:text-right lg:pr-4 lg:mt-2">Avatar</span>
    <div class="lg:flex-1 w-full">
      <input type="file" name="avatar" class="form-control form-file" data-multiple-caption="{count} files selected" multiple>
      <label for="avatar">
        <%= render_svg "icons/photo", styles: "fill-current icon-sm mr-2" %> <span>Upload Avatar</span>
      </label>
    </div>
  </div>

  <div class="form-group flex flex-wrap items-center justify-start">
    <label for="industry" class="label lg:w-1/6 lg:text-right lg:pr-4 lg:mt-2">Industry</label>
    <div class="relative lg:flex-1 w-full">
      <select name="industry" class="select">
        <option value="" selected>Choose an industry</option>
        <option value="tech">Tech</option>
        <option value="marketing">Marketing</option>
        <option value="health_science">Health &amp; Science</option>
      </select>
      <div class="caret">
        <%= render_svg "icons/caret", styles: "fill-current h-4 w-4" %>
      </div>
    </div>
  </div>
</form>
    <% end %>

</div>

<div class="mb-20">
  <h2 class="pb-3 mb-6 border-b border-gray-300">Flatpickr</h2>
  <p>We're using <%= link_to "stimulus-flatpickr", "https://github.com/adrienpoly/stimulus-flatpickr", target: :_blank %> to enable this functionality. You can customize this to whatever you need as it supports everything Flatpickr does.</p>

  <div class="form-group">
    <label for="name">Date</label>
    <input type="text" name="date" class="form-control" data-controller="flatpickr">
  </div>

  <div class="form-group">
    <label for="name">Date &amp; Time</label>
    <input type="text" name="datetime" class="form-control" data-controller="flatpickr" data-flatpickr-enable-time="true">
  </div>
</div>
